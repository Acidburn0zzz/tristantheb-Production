{% extends 'includes/base.html.twig' %}

{% block title %}{{ page_name }} {{ parent() }}{% endblock %}

{% block body %}
    {% include 'includes/menu.html.twig' %}
    {% include 'includes/head.html.twig' %}
    <main class="flex bg-gray-800">
        <section class="w-2/3 m-10">
            <article class="shadow-md">
                <h4 class="article-head bg-blue-700 p-4">{{ article.name }}</a></h4>
                <p class="article-body bg-blue-600 p-4">
                    {{ article.content }}
                </p>
                <p class="article-foot bg-blue-700 p-4">
                    <small><i class="fa fa-clock"></i> {{ article.createdOn|date }}</small> - <span><i class="fa fa-tag"></i> {{ article.tag }}</span>
                </p>
            </article>
        </section>
        <aside class="w-1/3 m-10"></aside>
    </main>
    {{ include('includes/footer.html.twig') }}
{% endblock %}